<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.my.UpdateUserActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:id="@+id/tableLayout_id_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp">
            <!--        android:background="@color/black"-->
            <!--        android:padding="1dp"-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="계정 정보 수정"
                android:textSize="40sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="계정 정보를 입력해주세요"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* 는 필수 입력란입니다."
                android:textSize="12sp" />

            <TextView
                android:layout_margin="25sp" />

            <TableRow
                android:gravity="center"
                android:layout_width="match_parent"
                android:weightSum="14">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textAlignment="textEnd"
                    android:layout_marginEnd="10dp"
                    android:text="이메일" />
                <EditText
                    android:layout_margin="1dp"
                    android:id="@+id/join_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="11"
                    android:ems="14"
                    android:hint="example@example.com"
                    android:inputType="textEmailAddress" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=" " />
            </TableRow>

            <TableRow
                android:gravity="center">
                <TextView
                    android:id="@+id/error_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/primary_500"
                    android:text="@string/join_guide_email" />
            </TableRow>

            <TableRow
                android:gravity="center"
                android:layout_width="match_parent"
                android:weightSum="14">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textAlignment="textEnd"
                    android:layout_marginEnd="10dp"
                    android:textSize="12sp"
                    android:text="비밀번호" />
                <EditText
                    android:layout_margin="1dp"
                    android:id="@+id/join_pw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="11"
                    android:ems="11"
                    android:hint="@string/password_hint"
                    android:inputType="textPassword" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:text="*" />
            </TableRow>

            <TableRow
                android:gravity="center">
                <!-- error message - pw -->
                <TextView
                    android:id="@+id/error_pw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/danger_500"
                    android:text="" />
            </TableRow>

            <TableRow
                android:gravity="center"
                android:layout_width="match_parent"
                android:weightSum="14">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textAlignment="textEnd"
                    android:layout_marginEnd="10dp"
                    android:textSize="12sp"
                    android:text="비밀번호\n확인" />
                <EditText
                    android:id="@+id/join_pw_check"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="11"
                    android:ems="14"
                    android:hint="비밀번호를 다시 입력해 주세요"
                    android:inputType="textPassword" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:text="*" />
            </TableRow>

            <TableRow
                android:gravity="center">
                <!-- error message - pw check -->
                <TextView
                    android:id="@+id/error_pwch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/danger_500"
                    android:text="" />
            </TableRow>

            <TableRow
                android:gravity="center"
                android:layout_width="match_parent"
                android:weightSum="14">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textAlignment="textEnd"
                    android:layout_marginEnd="10dp"
                    android:text="닉네임" />
                <EditText
                    android:layout_margin="1dp"
                    android:id="@+id/join_nickname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="11"
                    android:ems="14"
                    android:hint="닉네임"
                    android:inputType="textPersonName" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:text="*" />
            </TableRow>

            <TableRow
                android:gravity="center">
                <!-- error message - nickname -->
                <TextView
                    android:id="@+id/error_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/danger_500"
                    android:text="" />
            </TableRow>

            <TextView
                android:layout_margin="25sp" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수정"
                android:ems="11"
                android:textSize="26sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tableLayout_id_pw" />
        </TableLayout>
    </ScrollView>

</LinearLayout>