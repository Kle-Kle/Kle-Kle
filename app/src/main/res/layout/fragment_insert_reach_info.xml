<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:gravity="center"
tools:context=".signup.InsertReachInfoFragment">

<TableLayout
    android:id="@+id/tableLayout_id_pw"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/toolbar" >
    <!--        android:background="@color/black"-->
    <!--        android:padding="1dp"-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="추가 입력 사항"
        android:textSize="40sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="팔 길이를 입력하시면\n더 정확한 추천이 가능합니다."
        android:textSize="20sp" />

    <TextView
        android:layout_margin="30sp" />

    <TableRow
        android:gravity="center">
        <EditText
            android:id="@+id/input_reach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="11"
            android:hint="리치"
            android:inputType="numberDecimal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="cm" />
    </TableRow>

    <TextView
        android:layout_margin="30sp" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="계정 생성"
        android:ems="11"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout_id_pw" />
</TableLayout>

</LinearLayout>
