<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginVertical="10dp"
            android:src="@drawable/icon_delete_forever"
            android:layout_gravity="center"
            android:alpha="0.5"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="정말 탈퇴하시겠습니까?"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="탈퇴 버튼 선택 시,\n계정은 삭제되며 복구되지 않습니다."
        />
    <Button
        android:id="@+id/btn_delete_yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="탈퇴"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:backgroundTint="@color/danger_400"
        android:textColor="@color/white"
        />
    <Button
        android:id="@+id/btn_delete_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="취소"
        android:textSize="16sp"
        android:padding="20dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/gray_300"
        />
</LinearLayout>